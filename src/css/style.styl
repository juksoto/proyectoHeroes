flex-version = flex
@import "nib"


/*
* Import fonts
*/
@import url('https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&display=swap');
@import "font.styl"

//
// We declare the fonts for the headers, the content, the main font and the secondary font.
//

fontForHeaders()
	font-family: 'Lato', sans-serif;

fontForContent()
	font-family: 'Lato', sans-serif;

fontMain()
	font-family: 'Lato', sans-serif;

fontSecondary()
	font-family: 'Lato', sans-serif;
	
// Parameters

// Font Size Body
fontSize 		= 16px

//Color Web Entitie
colorUno 		= #1cbbb4
colorDos  		= #ffad1d
colorTres 		= #E5EEFB

colorVisited 		= colorDos
colorFaltaunDia 	= #F3561F
colorSuccess 		= #069169
colorError	 		= #A80521
colorInfo 			= #47abce
colorFontInfo		= #1F4788
colorWarning 		= #FFAB00

// scale gray
colorGrayDark  = #333
colorGrayLigth 	= #efefef

// Procesa si el color es oscuro o claro y genera el contraste
	isDarkoLigth(color)
		if luminosity(color) >= .5
			return colorGrayDark
		else
			return white
	// Hacer un color % mas oscuro o claro
	doDark(color)
		return darken(color, 20%)
	doLight(color)
		return lighten(color, 50%)
		
/*
* Estilos Base 
* [description] 
*/
html
	font-size 16px
	
body
	font-size fontSize
	fontForContent()
	overflow-x hidden
	font-weight 500
	line-height 1.5em
	color colorGrayDark
	&.faFontLg
		font-size 14px !important
	&.faFont2x
		font-size 20px
	&.faFont3x
		font-size 16px !important
		
h1, h2, h3, h4, h5, h6
	color colorUno
	fontForHeaders()	
	
.ui-widget
	fontForContent()

a
	color colorDos
	&:hover, &:focus, &:visited
		color colorUno

/** custom layout **/
header
	position absolute
	top 0
	left 0
	width 100%
	.navbar-brand
		display block 
		figure
			max-width 200px
			width 100%
		img
			width 100%
			height auto
	.navMenu
		.nav-item
			.nav-link 
				color white
				padding 0.5em
				&:hover, &:focus
					background-color colorUno
					color white
					outline none
.top
	background url("../img/background_top.jpg") no-repeat
	background-size:cover;
	background-position: center;
	min-height 33vh
	padding-top 5em   
.uVentana
	background-color rgba(black, 0.8)
	padding 0
	.ventanaContainer
		padding 2em
		h2
			font-size 0.9em
			color white
			font-weight 300
			span 
				font-size 3em
				display block
				font-weight 500
		p
			color white
		a
			text-decoration underline
			color white
			&:hover, &:focus
				color colorUno
	.ventanaActions
		ul
			padding 0
			list-style none
			margin 0
			li 
				padding 0
				margin 0
				button
					width 100%
					background-color colorUno
					color white
					border 0
					display block
					text-align center
					padding  1em
					font-size 2em
					&.btnLike--up
						background-color colorUno
						&:hover, &:focus
							outline none
							background-color doDark(colorUno)
							color white
					&.btnLike--down
						background-color colorDos
						&:hover, &:focus
							outline none
							background-color doDark(colorDos)
							color white
@media screen and (min-width 768px)
	.navMenu
		text-align  right
		.nav
			display flex
			justify-content space-between
			width 100%
	.uVentana
		margin-top 2em
		margin-bottom:  2em 
		
